extends ../layout

block body
  div.jumbotron
    div.container-fluid
      p= user.name
      //- p= user.name
      p= err

    div.container-fluid
      form(id="goals", method="POST", action="/goals")
        input(type="hidden", name="_user", value=user._id)
        div.form-group
          label(for="goalInput")
          input(type="text", id="goalInput", placeholder="What do you want to achieve?", name="title").form-control
          input(type="text", id="goalInput", placeholder="Describe it here", name="body").form-control
          button(type="submit") Submit

    div.container
      if goals && goals.length === 0
        //- p No goals found!
      else if goals
        each goal in goals
          h2= goal.title || 'No Title'
          p= goal.body || 'No Body'
          p= goal.date
          form(id="check", method="PATCH", action="/goals/update/:goalsId")
            input(type="hidden", name="_goal", value=goal._id)
            div.form-group
              button(type="submit") Submit
          //- button(onlick='goalProg()')
